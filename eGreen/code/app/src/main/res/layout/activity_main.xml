<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green"

    >

    <Button
        android:id="@+id/buttonseconnect"
        android:layout_width="269dp"
        android:layout_height="40dp"
        android:layout_marginTop="488dp"
        android:layout_marginEnd="68dp"
        android:background="#FDFEFE"
        android:onClick="onClick"
        android:text="SING IN"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/tvnewcount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.134"
        tools:ignore="OnClick,UnknownId" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="392dp"
        android:layout_height="174dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toTopOf="@+id/etlogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.394"
        app:srcCompat="@drawable/welcome" />

    <EditText
        android:id="@+id/etpassword"
        android:layout_width="258dp"
        android:layout_height="53dp"
        android:layout_marginTop="362dp"
        android:layout_marginEnd="68dp"
        android:focusable="true"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColor="#020101"
        android:textColorHint="#070876"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/buttonseconnect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.104"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/tvnewcount"
        android:layout_width="243dp"
        android:layout_height="34dp"
        android:layout_marginTop="552dp"
        android:clickable="true"
        android:selectAllOnFocus="true"
        android:text="NOT HAVE ACCOUNT, SING UP HERE"
        android:textColor="#052374"
        android:textColorHighlight="#F3070000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etlogin"
        android:layout_width="256dp"
        android:layout_height="64dp"
        android:layout_marginStart="82dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:focusable="true"
        android:hint="Enter your login"
        android:inputType="text"
        android:textColor="#020101"
        android:textColorHint="#070876"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/etpassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="UnknownId" />



</androidx.constraintlayout.widget.ConstraintLayout>